<h1 class="visually-hidden">Admin Login</h1>

<img src="/images/logadmin.png" alt="" aria-hidden="true" class="login-page-banner">

<div class="login-container">

  <form action="/admin/login" method="POST" class="login-form" autocomplete="off">
    <div class="login-field">
      <label for="username" class="visually-hidden">Username</label>
      <div class="input-wrapper">
        <img src="/images/filelogo.png" alt="" aria-hidden="true" class="input-icon-inside">
        <input id="username" name="user_name" type="text" placeholder="Username" required autocomplete="off">
      </div>
    </div>
    <div class="login-field">
      <label for="password" class="visually-hidden">Password</label>
      <div class="input-wrapper">
        <img src="/images/locklogo.png" alt="" aria-hidden="true" class="input-icon-inside">
        <input id="password" name="pass_word" type="password" placeholder="Password" required autocomplete="off">
      </div>
    </div>

    <button type="submit" class="login-button">LOGIN</button>
  </form>
</div>