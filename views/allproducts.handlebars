<h1 class="product-title halo">Welcome to the store</h1>
<h2 class="shopslogan">PixelPop – Bring Back the Retro Vibes with Classic Phones, MP3 Players, and Tamagotchis!</h2>
<div class="shop-container"> 

    <div>
        <nav class="sidenavi">
                <a href="/allproducts/" aria-label="All products">All products</a><br>
                <a href="/allproducts/findbycategory/?category=phone" aria-label="Phones">Phones</a><br>
                <a href="/allproducts/findbycategory/?category=tamagotchi" aria-label="Tamagotchis">Tamagotchis</a><br>
                <a href="/allproducts/findbycategory/?category=ringtone" aria-label="Ringtones">Ringtones</a><br>
                <a href="/allproducts/findbycategory/?category=camera" aria-label="Cameras">Cameras</a><br>
                <a href="/allproducts/findbycategory/?category=mp3player" aria-label="Mp3-players">Mp3-players</a><br>
        </nav>
    </div>
    <div>

    <!-- loop all pruducts -->
        {{#if products.length}}
            <section class="product-list" aria-label="List of all products">
            {{#each products}}
                <article class="product-card" aria-labelledby="product-{{@index}}">
                {{#if this.altText}}
                <img src="{{this.imageUrl}}" alt="{{this.altText}}" class="product-image">
                {{else}}
                <img src="{{this.imageUrl}}" alt="{{this.name}}" class="product-image">
                {{/if}}
                 <div class="product-info">
                    <h3 id="product-{{@index}}">{{this.name}}</h3>
                    <p><strong>Price:</strong> {{this.price}} €</p>
                {{#if this.category}}<p><strong>Category:</strong> {{this.category}}</p>{{/if}}
                <p>
                <strong>Availability:</strong>
                {{#if this.inStock}}<span style="color:green;">In stock</span>
                {{else}}<span style="color:red;">Out of stock</span>{{/if}}
                </p>
                </div>
                <!-- <div>
                <form action="/allproducts/addcart{{this._id}}" method="POST">
                    <button type="button" class="btn add" aria-label="Add {{this.name}} to the cart">Buy</button>
                </form> 
                </div> -->
                </article>
            {{/each}}
            </section>
        {{else}}
            <p class="no-products"> No products in the shop.</p>

        {{/if}}
    
</div>
</div>